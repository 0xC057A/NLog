<?xml version="1.0" encoding="utf-8" ?>
<?xml-stylesheet type="text/xsl" href="style.xsl" ?>
<content lang="en" id="appenders" subid="filters">
    <filters>
        <common-config>
            <parameter name="action" type="String" required="Yes" description="The action to be taken after this filter succeeds. Can be log, ignore or neutral" default="neutral" />
        </common-config>
        <filter name="whenEqual">
            <displayName>Layout String Equality Filter</displayName>
            <description>Checks whether a rendered layout string is equal to another string</description>
            <assembly>NLog.dll</assembly>
            <namespace>NLog.Filters</namespace>
            <className>WhenEqualFilter</className>
            <support framework="netcf-1.0" />
            <support framework="net-1.0" />
            <support framework="net-1.1" />
            <support framework="net-2.0" />
            <support framework="mono-1.0" />
            <support framework="mono-2.0" />
        </filter>
        <filter name="whenNotEqual">
            <displayName>Layout String Inequality Filter</displayName>
            <description>Checks whether a rendered layout string is NOT equal to another string</description>
            <assembly>NLog.dll</assembly>
            <namespace>NLog.Filters</namespace>
            <className>WhenNotEqualFilter</className>
            <support framework="netcf-1.0" />
            <support framework="net-1.0" />
            <support framework="net-1.1" />
            <support framework="net-2.0" />
            <support framework="mono-1.0" />
            <support framework="mono-2.0" />
        </filter>
        <filter name="whenContains">
            <displayName>Layout String Substring Filter</displayName>
            <description>Checks whether a rendered layout string contains the specified substring</description>
            <assembly>NLog.dll</assembly>
            <namespace>NLog.Filters</namespace>
            <className>WhenContainsFilter</className>
            <support framework="netcf-1.0" />
            <support framework="net-1.0" />
            <support framework="net-1.1" />
            <support framework="net-2.0" />
            <support framework="mono-1.0" />
            <support framework="mono-2.0" />
        </filter>
        <filter name="whenNotContains">
            <displayName>Layout String Negative Substring Filter</displayName>
            <description>Checks whether a rendered layout string DOES NOT contain the specified substring</description>
            <assembly>NLog.dll</assembly>
            <namespace>NLog.Filters</namespace>
            <className>WhenNotContainsFilter</className>
            <support framework="netcf-1.0" />
            <support framework="net-1.0" />
            <support framework="net-1.1" />
            <support framework="net-2.0" />
            <support framework="mono-1.0" />
            <support framework="mono-2.0" />
        </filter>
    </filters>
</content>
