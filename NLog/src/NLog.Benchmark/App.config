<?xml version="1.0" ?>
<configuration>
    <configSections>
        <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    </configSections>
    <nlog autoReload="true" throwExceptions="true">
        <appenders>
            <appender name="file1" type="File" filename="nlog-log.txt" layout="${level} ${longdate} ${message}" concurrentWrites="false" autoFlush="false" />
            <appender name="null1" type="Null" formatMessage="true" layout="${level} ${longdate} ${message}" />
            <appender name="null2" type="Null" layout="${level} ${longdate} ${message}" />
        </appenders>

        <rules>
            <logger name="nonlogger" minlevel="Fatal" appendTo="null1" />
            <logger name="file1" minlevel="Debug" appendTo="file1" />
            <logger name="null1" minlevel="Debug" appendTo="null1" />
            <logger name="null2" minlevel="Debug" appendTo="null2" />
        </rules>
    </nlog>
</configuration>
