<?xml version="1.0" encoding="windows-1250" ?>
<configuration>
    <configSections>
        <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    </configSections>
    
    <nlog autoReload="true" internalLogToConsole="true">
        <targets>
            <target name="xxx" type="SplitGroup">
                <target type="Mail" smtpserver="localhost" 
                    from="jaak@jkowalski.net"
                    to="jaak@jkowalski.net"
                    subject="AAA"
                    body="${log4jxmlevent}" />
                <target type="File" filename="log.txt" layout="${log4jxmlevent}" />
                <target type="RepeatingWrapper">
                    <target type="AsyncWrapper">
                        <target type="NLogViewer" address="udp://localhost:4000" />
                    </target>
                </target>
            </target>
        </targets>

        <rules>
            <logger name="*" minlevel="Debug" appendTo="xxx" />
        </rules>
    </nlog>
</configuration>

