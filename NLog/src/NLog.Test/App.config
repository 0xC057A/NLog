<?xml version="1.0" encoding="windows-1250" ?>
<configuration>
    <configSections>
        <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    </configSections>
    
    <nlog autoReload="true" internalLogToConsole="true">
        <targets>
            <target type="Console" name="xxx" layout="${processid} ${processname} ${threadname} ${threadid} ${gdc:item=GGG} ${message}" />
        </targets>

        <rules>
            <logger name="*" minlevel="Debug" appendTo="xxx" />
        </rules>
    </nlog>
</configuration>

