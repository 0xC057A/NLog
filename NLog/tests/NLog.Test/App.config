<?xml version="1.0" encoding="windows-1250" ?>
<configuration>
    <configSections>
        <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    </configSections>
    
    <nlog autoReload="true" throwExceptions="true">
        <targets>
            <target name="file" type="File" filename="${basedir}/${level}.txt" />
            
            <target name="console" type="Console" layout="${longdate}|${level}|${message}"/>

            <target name="cc" type="ColoredConsole" layout="${longdate}|${level}|${message}">
                <highlight-word text="kanarka" foregroundColor="Yellow" backgroundColor="DarkGray" />
                <!--
                <highlight-row condition="level == LogLevel.Debug" foregroundColor="Red" backgroundColor="Gray" />
                <highlight-word text="kota" foregroundColor="Yellow" backgroundColor="DarkGray" />
                <highlight-word text="psa" foregroundColor="DarkGreen" />
                <highlight-word regex="ego" wholeWords="false" foregroundColor="Yellow" backgroundColor="DarkGray" />
                -->
            </target>
            
            <target name="f" type="File"
                filename="${basedir}/file.txt"
                archiveAboveSize="20000"
                archiveFileName="${basedir}/archives/{########}.txt"
                maxArchiveFiles="3"
                concurrentWrites="false"
                />
        </targets>

        <rules>
            <logger name="*" writeTo="cc" />
        </rules>
    </nlog>
</configuration>

