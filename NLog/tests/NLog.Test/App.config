<?xml version="1.0" encoding="windows-1250" ?>
<configuration>
    <configSections>
        <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    </configSections>

    <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" throwExceptions="true"
           internalLogFile="NlogErr.txt" internalLogLevel="Trace">
        <targets>
            <target name="console" xsi:type="Console" 
                      layout="${longdate}|${level}|${message}" />
            <target name="file" xsi:type="File" fileName="${basedir}/log/file.txt"
                    layout="${stacktrace} ${message}" />
            <target name="msgbox" xsi:type="MessageBox" caption="My Message"
                    layout="${message}"/>
        </targets>
        
        <rules>
            <logger name="*" minlevel="Debug" writeTo="console" />
            <logger name="*" minlevel="Trace" writeTo="file" />
            <logger name="*" maxlevel="Trace" writeTo="msgbox" />
        </rules>
    </nlog>
</configuration>

