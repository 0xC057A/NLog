<?xml version="1.0" encoding="windows-1250" ?>
<configuration>
    <configSections>
        <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    </configSections>

    <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" throwExceptions="true"
           internalLogFile="NlogErr.txt" internalLogLevel="Trace">
        <targets>
          <target name="file" xsi:type="File" 
                  fileName="${basedir}/log/file.txt" 
                  adeleteOldFileOnStartup="true"
                  areplaceFileContentsOnEachWrite="true"
                  aheader="# Logging started on ${longdate}" 
                  afooter="# Logging finished on ${longdate}" 
                  alayout="${stacktrace} ${message}">
            <layout xsi:type="CSVLayout">
              <column name="message" layout="${message}" />
              <column name="logger" layout="${logger}" />
              <column name="sss" layout="${stacktrace}" />
            </layout>
          </target>
        </targets>
        
        <rules>
            <logger name="*" minlevel="Debug" writeTo="file" />
        </rules>
    </nlog>
</configuration>

