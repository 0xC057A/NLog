<?xml version="1.0" encoding="windows-1250" ?>
<configuration>
    <configSections>
        <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    </configSections>
    
    <nlog autoReload="true" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.nlog-project.org/schemas/NLog.xsd">
        <targets>
            <target name="f" xsi:type="File" fileName="file.txt" layout="${qpc:padding=10:difference=true} ${message}" concurrentWrites="false" openFileCacheTimeout="1"
                    archiveAboveSize="1000000" archiveFileName="file.{#####}.txt" />
        </targets>

        <rules>
            <logger name="*" writeTo="f" />
        </rules>
    </nlog>
</configuration>

