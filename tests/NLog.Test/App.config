<?xml version="1.0" encoding="windows-1250" ?>
<configuration>
    <configSections>
        <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    </configSections>
    
    <nlog autoReload="true" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.nlog-project.org/schemas/NLog.xsd">
        <targets async="true">
            <target name="file" xsi:type="File" fileName="${basedir}/${level}.txt" />
            <target name="console" xsi:type="Console" layout="${longdate}|${level}|${message}"/>
            <target name="cc" xsi:type="ColoredConsole" layout="${longdate}|${level}|${message}">
                <highlight-word text="kanarka" foregroundColor="Yellow" backgroundColor="DarkGray" />
            </target>

            <target name="f" xsi:type="File"
                fileName="${basedir}/file.txt"
                archiveAboveSize="20000"
                archiveFileName="${basedir}/archives/{########}.txt"
                maxArchiveFiles="3"
                concurrentWrites="false"
                />
        </targets>

        <rules>
            <logger name="*" writeTo="file" />
        </rules>
    </nlog>
</configuration>

